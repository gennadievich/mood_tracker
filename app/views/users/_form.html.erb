<%= form_for @user do |f| %>

    <div class="label_area">
      <%= f.label 'Электронная почта',nil, class: 'email_label_tag' %>
      <br>
      <%= f.label 'Имя',nil, class: 'name_label_tag' %>
      <br>
      <%= f.label 'Пароль',nil, class: 'password_label_tag' %>
      <br>
      <%= f.label 'Повторите пароль',nil, class: 'confirm_password_label_tag' %>
    </div>

    <div class="data_area">
      <%= f.email_field :email, class: 'email_data_field' %>
      <br>
      <%= f.text_field :name, class: 'name_data_field' %>
      <br>
      <%= f.password_field :password, class: 'password_data_field'%>
      <br>
      <%= f.password_field :password_confirmation, class: 'confirm_password_data_field' %>
    </div>

    <div>
      <%= f.submit 'Зарегистрироваться!', class: 'register_button' %>
    </div>

<% end %>