<%= form_for @user do |f| %>

    <div>
      <%= f.label :email %>
    </div>
    <div>
      <%= f.email_field :email %>
    </div>

    <div>
      <%= f.label :name %>
    </div>
    <div>
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.label :password %>
    </div>
    <div>
      <%= f.password_field :password%>
    </div>

    <div>
      <%= f.label :password_confirmation %>
    </div>
    <div>
      <%= f.password_field :password_confirmation %>
    </div>

    <div>
      <%= f.submit 'Sign Up' %>
    </div>

<% end %>