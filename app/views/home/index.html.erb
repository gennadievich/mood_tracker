<div class="home">

  <div id="last_moods">
    <h2>Last moods:</h2>
  </div>

  <div class="moods_list">
    <% @moods.each do |mood| %>

        <div>
            <%= link_to "#{mood.user.name}", user_path(mood.user) %>'s mood was <%= mood.status %> <%= time_ago_in_words(mood.created_at) %> ago
        </div>
    <% end %>
  </div>

  <div class="statistics">

    <div id="statistic">
      <h2>Statistics</h2>
    </div>

    <div class="average_mood">
      <h3>Average users' mood</h3>
      <h2><%= MoodCalculator.weight_to_word(@average_mood) %></h2>
    </div>
  </div>



</div>