<div style="text-align: center">
  <h1>Welcome to Happynaria!</h1>
  <h3>Website under construction :)</h3>
  <div>
    <% if current_user %>
        <h4>How are you, <%= link_to current_user.name, user_path(current_user) %>?</h4>
        <%= link_to 'Bad',    new_mood_path(:bad),    method: :post%>
        <%= link_to 'Good',   new_mood_path(:good),   method: :post %>
        <%= link_to 'Great',  new_mood_path(:great),  method: :post %>
    <% end %>
  </div>

  <br>

  <%= link_to 'Sign Up', new_user_path%>
  <%= link_to 'Log In', login_path %>

  <div>
    <%= link_to "#{current_user.name}", user_path(current_user) if current_user %>
    <%= link_to 'Logout', logout_path if current_user%>
  </div>

  <br><br>

  <div>
    <% @moods.each do |mood| %>

        <div>
            <%= link_to "#{mood.user.name}", user_path(mood.user) %>'s mood was <%= mood.status %> <%= time_ago_in_words(mood.created_at) %> ago
        </div>
    <% end %>
  </div>

</div>