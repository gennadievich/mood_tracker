<!DOCTYPE html>
<html>
<head>
  <title>Moodtracker</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="header">
  <div class="logo">
    <%= link_to image_tag('happynaria.jpg'), root_path %>
  </div>

  <div class="header-menu">
    <% unless current_user %>
        <%= link_to 'Войти', login_path %>
        <%= link_to 'Зарегистрироваться', new_user_path %>
    <% end %>

    <% if current_user %>
        <%= link_to t(:hi, username:current_user.name), user_path(current_user) %>
        <%= link_to 'Выйти', logout_path %>
    <% end %>
  </div>
</div>

<%= yield %>

</body>
</html>
